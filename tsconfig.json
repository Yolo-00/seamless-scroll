{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"declaration": true,
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		}
	}
}
